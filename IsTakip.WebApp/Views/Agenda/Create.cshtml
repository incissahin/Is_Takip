@model IsTakip.Core.Classes.CustomerClasses.Agenda

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Agenda</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label">Customer Name</label>
                <select asp-for="CustomerId" class ="form-control" asp-items="ViewBag.customers"></select>
            </div>
            <div class="form-group">
                <label asp-for="Explanation" class="control-label">Explanation</label>
                <input asp-for="Explanation" class="form-control" />
                <span asp-validation-for="Explanation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-slack" />
                <a class="btn btn-pinterest" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>

