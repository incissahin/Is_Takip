@model IsTakip.Core.Classes.CustomerClasses.Customer

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            Phone Number
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class = "col-sm-2">
            Tax Administration
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TaxAdministration)
        </dd>
        <dt class = "col-sm-2">
            Tax Number
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TaxNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Explanation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Explanation)
        </dd>
        <dt class = "col-sm-2">
            Customer Class Name
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.CustomerClassList[Model.CustomerClassId]
        </dd>
        <dt class = "col-sm-2">
            Restriction
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.customerRestriction)
        </dd>
        <dt class = "col-sm-2">
            Customer Representative Name
        </dt>
        <dd class = "col-sm-10">
             @ViewBag.customerRepresentativesList[Model.CustomerRepresentativeId]
        </dd>
        <dt class = "col-sm-2">
            Email
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.UserList[Model.UserId]
        </dd>
    </dl>
</div>
@if (Model.Agenda != null)
{
    <div>
        <table>
            <thead>
                <tr>
                    <th>Agenda Explanation of Related Customer</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Agenda)
                {
                    <tr>
                        <td>@item.Explanation</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
}
else
{
    <div>No Data Available in terms of Agenda İnformation.</div>
}
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
