@model IEnumerable<IsTakip.Core.Classes.BuinessClasses.Business>

@{
    ViewData["Title"] = "Index";
}

<h1>BUSINESSES</h1>

<div class="g-sidenav-show  bg-gray-100 mx-3">
    <div class="text-center">
        <a asp-action="Create" class="btn btn-slack text-white font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Edit user">
            New Business
        </a>
    </div>
<table class="table table-striped text-center">
    <thead>
        <tr >
            <th>
                Customer Name
            </th>
            <th>
                Offer Type
            </th>
            <th>
                Offer No
            </th>
            <th>
                End Notice Situation
            </th>
            <th>
                Customer Order No
            </th>
            <th>
                Supplier Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td>
                    <a href="@Url.Action("Details", "Customer", new { id = item.CustomerId })">@ViewBag.CustomerList[item.CustomerId]</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OfferType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OfferNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndNoticeSituation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerOrderNo)
                </td>
                <td>
                    @ViewBag.SupplierList[item.SupplierId]
                </td>
                <td class="align-middle">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-dark text-white font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Edit user">
                        Edit
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-facebook text-white font-weight-bold text-xs" data-toggle="tooltip" data-original-title="User Detail">
                        Details
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-reddit text-white font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Delete user">
                        Delete
                    </a>

                </td>
            </tr>
        }

    </tbody>
</table>
</div>
<div class="row d-flex justify-content-around">
    <a class="btn btn-outline-info col-md-5 py-5 col-12 golge mb-3" asp-controller="Jobfile" asp-action="Index">Jobfile List</a>
    <a class="btn btn-outline-info col-md-5 py-5 col-12 golge mb-3" asp-controller="Jobfile" asp-action="Create">Create Jobfile</a>
</div>
