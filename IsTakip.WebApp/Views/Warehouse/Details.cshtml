@model IsTakip.Core.Classes.WareHouseClasses.Warehouse

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="text-center mx-8">
    <h4>Warehouse</h4>
    <hr />
    <dl class="row text-center">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Explanation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Explanation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Officer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Officer)
        </dd>
        <dt class = "col-sm-2">
            Officer Phone Number
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OfficerPhone)
        </dd>
    </dl>
</div>
@if (Model.wareHouseInventories != null)
{
    <div class="mx-10">
        <table class="table table-secondary">
            <thead>
                <tr>
                    <th>Inventory Explanation</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.wareHouseInventories)
                {
                    <tr>
                        <td>@item.Explanation</td>
                        <td>@item.Amount</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
}
else
{
    <div>No Data Available in terms of Agenda İnformation.</div>
}
<div class="text-center">
    <a class="btn btn-instagram" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a class="btn btn-warning" asp-action="Index">Back to List</a>
</div>
